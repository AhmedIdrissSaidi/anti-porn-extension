{
  "manifest_version": 3,
  "name": "Anti-Porn v4.0",
  "version": "4.0.0",
  "description": "Hardcore content blocking with commitment and penalty system",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Anti-Porn Settings",
    "default_popup": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.css", "blocked.js", "logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
